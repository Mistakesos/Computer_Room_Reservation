{
    "tasks": [
        {
            "type": "shell",
            "label": "C/C++: g++ 生成活动文件",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                //"-g",
                "-std=c++23",
                "${workspaceFolder}/src/*.cpp",
                "-I",
                "${workspaceFolder}/inc",
                "-o",
                "${workspaceFolder}/out/computer_room_reservation.out"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "调试器生成的任务。"
        },
        
    ],
    "version": "2.0.0"
}